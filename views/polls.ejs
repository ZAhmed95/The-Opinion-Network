<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Polls</title>
    <% include ./partials/head %>
  </head>
  <body>
    <% include ./partials/nav %>
    <a href="/polls/create"><button type="button" name="createPoll">Create New Poll</button></a>

    <!-- show all polls -->
    <% for (var i = 0; i < rows.length; i++){ %>
      <a href=<%= "/polls/" + rows[i].id %>>
        <div class="pollItem">
          <h2><%= rows[i].title %></h2>
          <h3>Public opinion: <%= Math.round(rows[i].avg_opinion * 100) / 100 %></h3>
        </div>
      </a>
    <% } %>
  </body>
</html>
